<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/template_generated_element">
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"/>
    <Spinner android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/spin" android:prompt="@string/choice_prompt"
        android:layout_alignParentRight="true"/>
    <EditText android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text2"
        android:textSize="25sp"
        android:layout_below="@+id/spin"
        android:visibility="gone"/>
</RelativeLayout>