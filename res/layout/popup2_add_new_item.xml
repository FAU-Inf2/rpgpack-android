<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="-50dp" >

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="7" >

                <Space android:layout_column="1" />

                <Space android:layout_row="1" />

                <Space
                    android:layout_column="1"
                    android:layout_row="5" />

                <Space android:layout_row="11" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="265dp"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_gravity="top"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:layout_row="0"
                    android:ems="10"
                    android:hint="Items Name..."
                    android:maxLength="24"
                    android:textSize="16sp" >

                    <requestFocus />
                </EditText>

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:layout_columnSpan="3"
                    android:layout_gravity="fill_horizontal|fill_vertical"
                    android:layout_marginTop="10px"
                    android:layout_row="11"
                    android:ems="10"
                    android:gravity="top|left"
                    android:hint="Dein Beschreibungstext..."
                    android:inputType="textMultiLine"
                    android:lines="8"
                    android:scrollbars="vertical"
                    android:textSize="14sp" >
                </EditText>

                <Switch
                    android:id="@+id/switch1"
                    android:layout_column="2"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="25px"
                    android:layout_row="5" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="98dp"
                    android:layout_column="2"
                    android:layout_gravity="left|top"
                    android:layout_marginLeft="2px"
                    android:layout_marginRight="20px"
                    android:layout_row="5"
                    android:text="sichtbar?"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="5px"
                    android:layout_row="6"
                    android:text="Range To:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="5px"
                    android:layout_row="8"
                    android:text="Modifikator:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="69dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginRight="10px"
                    android:layout_row="5"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="0"
                    android:inputType="numberSigned"
                    android:maxLength="5"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="69dp"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginRight="10px"
                    android:layout_row="6"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="100"
                    android:inputType="numberSigned"
                    android:maxLength="5"
                    android:textSize="16sp" />

                <Switch
                    android:id="@+id/Switch01"
                    android:layout_column="2"
                    android:layout_gravity="left|bottom"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="5px"
                    android:layout_row="6" />

                <Switch
                    android:id="@+id/Switch02"
                    android:layout_column="2"
                    android:layout_gravity="left|bottom"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="5px"
                    android:layout_row="7" />

                <Switch
                    android:id="@+id/Switch03"
                    android:layout_column="2"
                    android:layout_gravity="left|bottom"
                    android:layout_marginRight="20px"
                    android:layout_marginTop="5px"
                    android:layout_row="8" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="69dp"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginRight="10px"
                    android:layout_row="7"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="50"
                    android:inputType="numberSigned"
                    android:maxLength="5"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="69dp"
                    android:layout_column="1"
                    android:layout_gravity="center_horizontal|top"
                    android:layout_marginRight="10px"
                    android:layout_row="8"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="-2"
                    android:inputType="numberSigned"
                    android:maxLength="5"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="5px"
                    android:layout_row="7"
                    android:text="Default Value:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10px"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:layout_row="5"
                    android:text="Range From:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_column="0"
                    android:layout_gravity="left|bottom"
                    android:layout_marginLeft="10px"
                    android:layout_marginTop="22px"
                    android:layout_row="10"
                    android:text="Beschreibung:"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </GridLayout>
            <!-- -add your views here -->
        </LinearLayout>

        <!--
              <ImageView
            android:id="@+id/imageView_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="top|right"
            android:clickable="true"
            android:src="@drawable/close_button_dred" />
        -->
    </FrameLayout>

</LinearLayout>