<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/spaltenanzahl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/editTextMatrixValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="25dp"
        android:text="@string/matrix_value"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editTextMatrixValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_remove_column"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/button_remove_column"
        android:layout_toRightOf="@+id/spaltenanzahl"
        android:ems="10"
        android:inputType="number"
        android:singleLine="true" />

    <ImageButton
        android:id="@+id/button_add_column"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerInside"
        android:src="@drawable/big_add_icon" />

    <ImageButton
        android:id="@+id/button_remove_column"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_add_column"
        android:scaleType="centerInside"
        android:src="@drawable/big_remove_icon" />

</RelativeLayout>