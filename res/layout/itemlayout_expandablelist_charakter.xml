<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/character_highlighting_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:padding="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/shape_circle_highlightig" />

    <TextView
        android:id="@+id/textItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/character_highlighting_circle"
        android:layout_alignRight="@+id/character_highlighting_circle"
        android:layout_below="@+id/character_highlighting_circle"
        android:gravity="center"
        android:text="name"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/character_icon_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/shape_circle_character_border"
            android:gravity="center"
            android:maxWidth="200dip"
            android:padding="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/figure1head" />
    </RelativeLayout>

</RelativeLayout>