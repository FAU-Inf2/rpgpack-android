<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_dark" >

    <Button
        android:id="@+id/btn_start_game"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_marginTop="49dp"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/play"
        android:onClick="startGame"
        android:paddingLeft="15dip"
        android:text="@string/start_game"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_load_game"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/btn_start_game"
        android:layout_alignBottom="@+id/btn_start_game"
        android:layout_alignParentRight="true"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/load"
        android:drawablePadding="15dp"
        android:onClick="loadGame"
        android:paddingLeft="15dip"
        android:text="@string/load_game"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_tmplate_generator"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignBaseline="@+id/btn_manage_charackter"
        android:layout_alignBottom="@+id/btn_manage_charackter"
        android:layout_alignParentRight="true"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/template"
        android:onClick="templateGenerator"
        android:paddingLeft="15dip"
        android:text="@string/template_generator"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_manage_charackter"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_start_game"
        android:layout_marginTop="20dp"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/character"
        android:onClick="manageCharackter"
        android:paddingLeft="15dip"
        android:text="@string/manage_charackter"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_settings"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btn_manage_charackter"
        android:layout_marginTop="20dp"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/alljoyn"
        android:onClick="alljoyn"
        android:paddingLeft="15dip"
        android:text="@string/alljoyn"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/settings"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btn_settings"
        android:background="@color/background_green"
        android:drawableLeft="@drawable/settings"
        android:onClick="alljoyn"
        android:paddingLeft="15dip"
        android:text="@string/settings"
        android:textColor="@color/white" />

</RelativeLayout>