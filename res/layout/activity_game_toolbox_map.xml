<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:orientation="vertical"
    tools:context=".ToolboxMapActivity" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:id="@+id/maplayout">

        <de.fau.cs.mad.gamekobold.game.ToolboxMapView
            android:id="@+id/map"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:background="@color/white" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/paint_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/background_dark"
        android:orientation="horizontal" >

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="#000000"
            android:contentDescription="@string/description_black"
            android:onClick="iconClicked"
            android:src="@drawable/paint_unpressed"
            android:tag="#000000" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="#008000"
            android:contentDescription="@string/description_green"
            android:onClick="iconClicked"
            android:src="@drawable/paint_unpressed"
            android:tag="#008000" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="#FF0000"
            android:contentDescription="@string/description_red"
            android:onClick="iconClicked"
            android:src="@drawable/paint_unpressed"
            android:tag="#FF0000" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/background_green"
            android:onClick="openMenu"
            android:tag="Background"
            android:text="o" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/background_green"
            android:onClick="undo"
            android:tag="Background"
            android:text="u" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/background_green"
            android:onClick="redo"
            android:tag="Background"
            android:text="r" />

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:background="@color/background_green"
            android:onClick="activateErase"
            android:tag="Background"
            android:text="E" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/paint_dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </LinearLayout>

</LinearLayout>