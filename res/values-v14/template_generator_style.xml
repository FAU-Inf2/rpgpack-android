<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="template_generator_style" parent="android:Theme.Holo">

        <!-- API 14 theme customizations can go here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:buttonStyle">@style/template_generator_button_style</item>
        <item name="android:editTextStyle">@style/template_generator_edittext_style</item>
        <item name="android:actionBarStyle">@style/template_generator_actionbar</item>
    </style>

    <style name="template_generator_button_style" parent="android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="template_generator_edittext_style" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="template_generator_actionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
    <item name="android:background">@color/background_dark</item>
    <item name="android:textColor">@color/white</item>
</style>

</resources>