<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/template_main_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:foreground="@drawable/shape_window_dim"
    tools:context="de.fau.cs.mad.gamekobold.TemplateStoreMainActivity" >
    
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".TemplateStoreMainActivity" 
     >
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/template_store_main_heading"
        android:textColor="@color/white"
        android:textSize="@dimen/text_xxl">
        
    </TextView>
	

    

    <View
    android:id="@+id/separator"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="5dp"
    android:layout_width="fill_parent"
    android:layout_height="1dp"
    android:layout_below="@+id/textView1"
    android:background="@android:color/darker_gray"/>

    <ListView
        android:id="@+id/listView1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@android:id/list"
        android:layout_marginRight="20dp"
        android:listSelector="@drawable/store_list_selector"
        android:divider="@color/white"
        android:dividerHeight="1sp"
        >

    </ListView>

    <ListView
        android:id="@android:id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/separator"
        android:layout_marginTop="20dp"
        android:divider="@android:color/white"
        android:dividerHeight="1dp"
        android:layout_toRightOf="@+id/listView1" >

    </ListView>

</RelativeLayout>

 
</FrameLayout>